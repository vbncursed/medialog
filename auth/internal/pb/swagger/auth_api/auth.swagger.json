{
  "swagger": "2.0",
  "info": {
    "title": "Auth Service API",
    "description": "Микросервис аутентификации и авторизации",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "AuthService"
    }
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/auth/login": {
      "post": {
        "summary": "Login проверяет учётные данные и возвращает пару access/refresh токенов.",
        "operationId": "AuthService_Login",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1AuthResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1LoginRequest"
            }
          }
        ],
        "tags": [
          "AuthService"
        ]
      }
    },
    "/v1/auth/logout": {
      "post": {
        "summary": "Logout отзывает refresh-сессию (по refresh_token).",
        "operationId": "AuthService_Logout",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1LogoutResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1LogoutRequest"
            }
          }
        ],
        "tags": [
          "AuthService"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/v1/auth/logout-all": {
      "post": {
        "summary": "LogoutAll отзывает все refresh-сессии пользователя (по refresh_token одной из сессий).",
        "operationId": "AuthService_LogoutAll",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1LogoutResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1LogoutAllRequest"
            }
          }
        ],
        "tags": [
          "AuthService"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/v1/auth/refresh": {
      "post": {
        "summary": "Refresh принимает refresh_token и выдаёт новую пару access/refresh (refresh ротируется).",
        "operationId": "AuthService_Refresh",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1AuthResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1RefreshRequest"
            }
          }
        ],
        "tags": [
          "AuthService"
        ]
      }
    },
    "/v1/auth/register": {
      "post": {
        "summary": "Register создаёт пользователя и возвращает пару access/refresh токенов.",
        "operationId": "AuthService_Register",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1AuthResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1RegisterRequest"
            }
          }
        ],
        "tags": [
          "AuthService"
        ]
      }
    },
    "/v1/auth/users/{userId}/role": {
      "post": {
        "summary": "UpdateUserRole изменяет роль пользователя (только для администраторов).",
        "operationId": "AuthService_UpdateUserRole",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1UpdateUserRoleResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "userId",
            "description": "ID пользователя, роль которого нужно изменить",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "uint64"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AuthServiceUpdateUserRoleBody"
            }
          }
        ],
        "tags": [
          "AuthService"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    }
  },
  "definitions": {
    "AuthServiceUpdateUserRoleBody": {
      "type": "object",
      "properties": {
        "role": {
          "type": "string",
          "title": "Новая роль (user или admin)"
        }
      },
      "title": "UpdateUserRoleRequest - запрос на изменение роли пользователя"
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    },
    "v1AuthResponse": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "format": "uint64",
          "title": "ID пользователя"
        },
        "accessToken": {
          "type": "string",
          "title": "JWT access token"
        },
        "refreshToken": {
          "type": "string",
          "title": "Opaque refresh token"
        }
      },
      "title": "AuthResponse - ответ с токенами доступа"
    },
    "v1LoginRequest": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email пользователя"
        },
        "password": {
          "type": "string",
          "title": "Пароль пользователя"
        }
      },
      "title": "LoginRequest - запрос на вход в систему"
    },
    "v1LogoutAllRequest": {
      "type": "object",
      "properties": {
        "refreshToken": {
          "type": "string",
          "title": "Refresh token одной из сессий"
        }
      },
      "title": "LogoutAllRequest - запрос на выход со всех устройств"
    },
    "v1LogoutRequest": {
      "type": "object",
      "properties": {
        "refreshToken": {
          "type": "string",
          "title": "Refresh token сессии для отзыва"
        }
      },
      "title": "LogoutRequest - запрос на выход из сессии"
    },
    "v1LogoutResponse": {
      "type": "object",
      "properties": {
        "success": {
          "type": "boolean",
          "title": "Флаг успешного выполнения операции"
        },
        "message": {
          "type": "string",
          "title": "Сообщение о результате операции"
        }
      },
      "title": "LogoutResponse - ответ на запросы выхода из сессии"
    },
    "v1RefreshRequest": {
      "type": "object",
      "properties": {
        "refreshToken": {
          "type": "string",
          "title": "Refresh token для обновления"
        }
      },
      "title": "RefreshRequest - запрос на обновление токенов"
    },
    "v1RegisterRequest": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email пользователя"
        },
        "password": {
          "type": "string",
          "title": "Пароль пользователя"
        }
      },
      "title": "RegisterRequest - запрос на регистрацию пользователя"
    },
    "v1UpdateUserRoleResponse": {
      "type": "object",
      "properties": {
        "success": {
          "type": "boolean",
          "title": "Флаг успешного выполнения операции"
        },
        "message": {
          "type": "string",
          "title": "Сообщение о результате операции"
        }
      },
      "title": "UpdateUserRoleResponse - ответ на запрос изменения роли пользователя"
    }
  },
  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "description": "JWT Bearer токен. Формат: Bearer \u003ctoken\u003e",
      "name": "Authorization",
      "in": "header"
    }
  }
}
